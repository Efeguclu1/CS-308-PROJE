apiVersion: batch/v1
kind: Job
metadata:
  name: init-db-job
spec:
  template:
    spec:
      containers:
      - name: init-db
        image: mysql:8.0
        command: ["sh", "-c"]
        args:
          - mysql -h mysql-service -u root -p2001 online_store < /docker-entrypoint-initdb.d/init_db.sql
        volumeMounts:
        - name: sql-volume
          mountPath: /docker-entrypoint-initdb.d
      restartPolicy: Never
      volumes:
      - name: sql-volume
        configMap:
          name: init-db-sql
  backoffLimit: 4
